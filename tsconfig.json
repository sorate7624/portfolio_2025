{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "components/*": [
        "./src/app/components/*"
      ],
      "config/*": [
        "./src/app/config/*"
      ],
      "hooks/*": [
        "./src/app/hooks/*"
      ],
      "modules/*": [
        "./src/app/modules/*"
      ],
      "scss/*": [
        "./src/app/scss/*"
      ],
      "store/*": [
        "./src/app/store/*"
      ],
      "types/*": [
        "./src/app/types/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "dist/types/**/*.ts",
    "**/types/**/*.d.ts",
    "dist/dev/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
